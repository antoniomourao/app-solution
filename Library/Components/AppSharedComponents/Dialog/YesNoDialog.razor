<GenericDialog Title=@Title Show=@Show CancelText=@CancelText ConfirmText=@ConfirmText OnCancel=@OnNo OnConfirm=@OnYes>
 @ChildContent
</GenericDialog>

@code {

 [Parameter]
 public string Title { get; set; } = "Question";	

 [Parameter]
 public string CancelText { get; set; } = "No";

 [Parameter]
 public string ConfirmText { get; set; } = "Yes";

 [Parameter]
 public RenderFragment ChildContent { get; set; } = null!;

 [Parameter]
 public bool Show { get; set; }


 [Parameter] public EventCallback OnNo { get; set; }
 [Parameter] public EventCallback OnYes { get; set; }

}
