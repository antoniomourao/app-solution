@using AppShared.NavMenu;

<div class="nav-item px-3">
    <NavLink class="nav-link" href="@item.Href" data-enhance-nav-xx="false">
        <i class="@item.Icon" style="font-size: 1.5rem; color: white; padding:5px" aria-hidden="true" />
        @item.Title
    </NavLink>
</div>

@code {
    [Parameter]
    public string? Href { get; set; } = string.Empty;

    [Parameter]
    public string? Icon { get; set; } = string.Empty;

    [Parameter]
    public string? Title { get; set; } = string.Empty;

    [Parameter]
    public INavMenuItem? Item { get; set; } = null;

    private INavMenuItem item
    {
        get
        {
            if (Item != null)
            {
                return Item;
            }
            else
            {
                return new NavMenuItem
                    {
                        Href = Href,
                        Icon = Icon,
                        Title = Title
                    };
            }
        }
    }
}
